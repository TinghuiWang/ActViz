<Page
    x:Class="ActViz.Pages.DatasetViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ActViz.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:localcontrols="using:ActViz.Controls"
    xmlns:models="using:ActViz.Models"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid Margin="24,24,0,0" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="textBlockTitle"
                       Style="{StaticResource TitleTextBlockStyle}"
                       FontSize="28"
                       FontFamily="Comic Sans MS" FontWeight="Bold" FontStyle="Italic"
                       VerticalAlignment="Center" />
        </Grid>
        <Frame x:Name="localFrame" Grid.Row="1" />
    </Grid>
</Page>
